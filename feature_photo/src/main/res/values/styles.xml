<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoadingAnimationStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:elevation">60dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/picture_logo</item>
        <item name="android:tint">@color/teal_700</item>
    </style>

    <style name="Photo">
        <item name="android:fontFamily">@font/playfair</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Photo.Title" parent="Photo">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Photo.Detail" parent="Photo">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Photo.Detail.Title" parent="Photo.Detail">
        <item name="android:fontFamily">@font/avenir</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Photo.Detail.Title.Collapsed" parent="Photo.Detail.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Photo.Detail.Title.Expanded" parent="Photo.Detail.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Comment">
        <item name="android:fontFamily">@font/avenir</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Comment.Header" parent="Comment">
        <item name="android:fontFamily">@font/playfair</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Comment.Name" parent="Comment">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Comment.Email" parent="Comment">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Comment.Body" parent="Comment">
        <item name="android:textSize">12sp</item>
    </style>

</resources>